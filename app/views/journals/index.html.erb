<div class="flex flex-col items-center mb-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-4">Your Journals</h1>
  <%= link_to "New Journal Entry", new_journal_path, class: "bg-black text-white rounded-md py-2 px-6 hover:bg-gray-700 transition duration-300" %>
</div>

<ul class="space-y-6">
  <% @journals.each do |journal| %>
    <li class="mx-10 border border-black bg-white p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
      <div class="flex items-center justify-between">
        <div class="flex-1">
          <%= link_to journal.title, journal, class: "text-2xl font-bold text-gray-800 hover:text-blue-600 transition duration-300" %>
          <p class="text-gray-600 mt-2 text-sm"><%= journal.content %></p> <!-- Displaying the journal description here -->
          
          <% if journal.attachment.present? %>
            <div class="mt-2">
              <h3 class="text-sm font-medium text-gray-700">Attached File:</h3>
              <%= link_to journal.attachment.filename.to_s, rails_blob_path(journal.attachment, disposition: "attachment"), class: "text-blue-600 hover:underline" %>
            </div>
          <% end %>
        </div>
        <div class="flex space-x-2">
          <%= link_to "Edit", edit_journal_path(journal), class: "bg-yellow-500 text-white font-semibold py-2 px-4 rounded hover:bg-yellow-600 transition duration-300" %>
          <%= link_to "Delete", journal, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 text-white font-semibold py-2 px-4 rounded hover:bg-red-600 transition duration-300" %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
