<div class="max-w-lg mx-auto p-6 bg-white rounded-lg shadow-md mt-10">
  <h1 class="text-3xl font-bold text-gray-900 mb-6"><%= @journal.title %></h1>
  <p class="text-gray-700 mb-6"><%= @journal.content %></p>

  <% if @read_only %>
    <p class="text-gray-500">You are viewing this journal as a guest.</p>
  <% else %>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_journal_path(@journal), class: "bg-yellow-500 text-white rounded-md px-4 py-2 hover:bg-yellow-600 transition duration-300" %>
    </div>
  <% end %>
  <% if @journal.attachment.attached? %>
    <div class="mt-4">
      <h2 class="text-lg font-semibold mb-2">Attached File:</h2>
      <%= link_to @journal.attachment.filename, rails_blob_path(@journal.attachment, disposition: "attachment"), class: "text-blue-500 hover:underline" %>
    </div>
  <% end %>

  <div class="flex justify-center">
    <%= link_to "Back", journals_path, class: "mt-4 inline-block text-gray-600 hover:underline hover:text-blue-500 transition duration-200" %>
  </div>
</div>
